<div class="card mx-2">
    <h6 class="card-header">New Group </h6>
    <div class="card-body">
        <div class="row justify-content-md-center my-2">
            <div class="col-md-10">
                <div id="loader"></div>

                <input type="text" id="hdnGroupMemberId" hidden />
                <div class="form-group">
                    <input autocomplete="off" type="text" class="form-control" id="grpName" name="grpName" placeholder="Set Group Name">
                </div>


                <div class="form-group">
                    <select id="memberList"></select>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" checked name="isPrivate" id="inlineRadio1" value="Y">
                    <label class="form-check-label" name="isPrivate">Private Group</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="isPrivate" id="inlineRadio2" value="N">
                    <label class="form-check-label" name="isPrivate">Common Group</label>
                </div>
            </div>
        </div>
    </div>
</div>